<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_headline_news_item_headline_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headline_news"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_data_headline_news_item_headline_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_headline_news_item_headline_news" />

</RelativeLayout>
